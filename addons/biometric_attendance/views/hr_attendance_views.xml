<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Vista extendida de asistencias para mostrar datos biométricos -->
    <record id="view_attendance_tree_biometric" model="ir.ui.view">
        <field name="name">hr.attendance.tree.biometric</field>
        <field name="model">hr.attendance</field>
        <field name="inherit_id" ref="hr_attendance.view_attendance_tree"/>
        <field name="arch" type="xml">
            <field name="check_in" position="after">
                <field name="biometric_method"/>
                <field name="confidence_score"/>
            </field>
        </field>
    </record>

    <!-- Vista extendida del formulario de asistencias -->
    <record id="view_attendance_form_biometric" model="ir.ui.view">
        <field name="name">hr.attendance.form.biometric</field>
        <field name="model">hr.attendance</field>
        <field name="inherit_id" ref="hr_attendance.hr_attendance_view_form"/>
        <field name="arch" type="xml">
            <field name="employee_id" position="after">
                <field name="biometric_method"/>
                <field name="confidence_score" invisible="biometric_method != 'facial'"/>
                <field name="device_info"/>
            </field>
        </field>
    </record>

    <!-- Acción para ver asistencias biométricas -->
    <record id="action_biometric_attendance" model="ir.actions.act_window">
        <field name="name">Asistencias Biométricas</field>
        <field name="res_model">hr.attendance</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('biometric_method', '!=', 'manual')]</field>
        <field name="context">{'search_default_today': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                ¡No hay asistencias biométricas registradas!
            </p>
            <p>
                Las asistencias registradas mediante reconocimiento facial aparecerán aquí.
            </p>
        </field>
    </record>

    <!-- Menú para asistencias biométricas -->
    <menuitem id="menu_biometric_attendance" 
              name="Asistencias Biométricas" 
              parent="hr_attendance.menu_hr_attendance_root"
              action="action_biometric_attendance"
              sequence="15"/>
</odoo>