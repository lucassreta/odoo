<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Vista de empleado con campos biométricos -->
    <record id="view_employee_form_biometric" model="ir.ui.view">
        <field name="name">hr.employee.form.biometric</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.view_employee_form"/>
        <field name="arch" type="xml">
            <notebook position="inside">
                <page string="Biometría" name="biometric">
                    <group>
                        <group>
                            <field name="biometric_active"/>
                            <field name="last_face_training"/>
                        </group>
                        <group>
                            <field name="face_photo" widget="image" class="oe_avatar"/>
                        </group>
                    </group>
                    <group>
                        <button name="%(action_register_face)d" string="Registrar Rostro" 
                                type="action" class="btn-primary" 
                                invisible="biometric_active"/>
                        <button name="%(action_retrain_face)d" string="Reentrenar Rostro" 
                                type="action" class="btn-warning"
                                invisible="not biometric_active"/>
                    </group>
                </page>
            </notebook>
        </field>
    </record>

    <!-- Acción para modo kiosco -->
    <record id="action_attendance_kiosk" model="ir.actions.act_window">
        <field name="name">Kiosco de Asistencia</field>
        <field name="res_model">attendance.kiosk</field>
        <field name="view_mode">form</field>
        <field name="target">fullscreen</field>
        <field name="context">{'kiosk_mode': True}</field>
    </record>

    <!-- Menú principal -->
    <menuitem id="menu_attendance_kiosk" 
              name="Kiosco Biométrico" 
              parent="hr_attendance.menu_hr_attendance_root"
              action="action_attendance_kiosk"
              sequence="10"/>
</odoo>