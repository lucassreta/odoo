<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_order_form_inherit_autocomplete" model="ir.ui.view">
        <field name="name">sale.order.form.inherit.autocomplete</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='partner_id']" position="after">
                <field name="x_address_autocomplete"
                       placeholder="🌍 Buscar dirección..."
                       string="Dirección con Autocompletado"
                       class="o_google_places_field" />
            </xpath>
        </field>
    </record>
</odoo>