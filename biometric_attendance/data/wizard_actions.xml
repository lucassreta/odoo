<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Acción para abrir wizard de registro facial -->
    <record id="action_register_face" model="ir.actions.act_window">
        <field name="name">Registrar Rostro</field>
        <field name="res_model">register.face.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="context">{'default_employee_id': active_id}</field>
    </record>

    <!-- Acción para reentrenar rostro (reutiliza el mismo wizard) -->
    <record id="action_retrain_face" model="ir.actions.act_window">
        <field name="name">Reentrenar Rostro</field>
        <field name="res_model">register.face.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="context">{'default_employee_id': active_id, 'retrain_mode': True}</field>
    </record>

    <!-- Vista del wizard de registro -->
    <record id="view_register_face_wizard_form" model="ir.ui.view">
        <field name="name">register.face.wizard.form</field>
        <field name="model">register.face.wizard</field>
        <field name="arch" type="xml">
            <form string="Registro Facial">
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="employee_id" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <field name="instructions" nolabel="1"/>
                    </group>
                </sheet>
                <footer>
                    <button string="Iniciar Registro" name="action_open_registration" type="object" class="btn-primary"/>
                    <button string="Cancelar" name="cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>