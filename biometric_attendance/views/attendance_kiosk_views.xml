<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_attendance_kiosk_form" model="ir.ui.view">
        <field name="name">attendance.kiosk.form</field>
        <field name="model">attendance.kiosk</field>
        <field name="arch" type="xml">
            <form string="Kiosco de Asistencia" class="o_kiosk_form">
                <header>
                    <div class="kiosk_header">
                        <h1>Sistema de Asistencia Biométrica</h1>
                        <div class="kiosk_clock" id="kiosk_clock"></div>
                    </div>
                </header>
                <sheet>
                    <div class="kiosk_container">
                        <!-- Área de cámara -->
                        <div class="camera_section">
                            <div id="camera_container">
                                <video id="video" width="640" height="480" autoplay="autoplay"></video>
                                <canvas id="canvas" width="640" height="480" style="display: none;"></canvas>
                            </div>
                            <div class="camera_controls">
                                <div class="btn btn-success btn-lg kiosk-button" id="start_camera">
                                    <i class="fa fa-camera"/> Iniciar Cámara
                                </div>
                                <div class="btn btn-primary btn-lg kiosk-button" id="capture_face" style="display: none;">
                                    <i class="fa fa-user"/> Registrar Asistencia
                                </div>
                            </div>
                        </div>

                        <!-- Área de información -->
                        <div class="info_section">
                            <div id="recognition_status" class="status_display">
                                <i class="fa fa-clock-o"/> Listo para reconocimiento
                            </div>
                            <div id="employee_info" class="employee_display" style="display: none;">
                                <div class="employee_photo"></div>
                                <div class="employee_details">
                                    <h3 class="employee_name"></h3>
                                    <p class="attendance_action"></p>
                                    <p class="attendance_time"></p>
                                </div>
                            </div>
                        </div>

                        <!-- Área de configuración (solo admin) -->
                        <div class="admin_section" groups="hr_attendance.group_hr_attendance_manager">
                            <div class="btn btn-info kiosk-button" id="admin_settings">
                                <i class="fa fa-cog"/> Configuración
                            </div>
                        </div>
                    </div>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Modelo dummy para la vista kiosk -->
    <record id="attendance_kiosk_dummy" model="attendance.kiosk">
        <field name="name">Kiosk Default</field>
    </record>
</odoo>